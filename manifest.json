{
  "manifest_version": 3,
  "name": "Deepfake Watch (Prototype)",
  "version": "0.1.0",
  "description": "Warns on possible deepfakes via tab capture (user-approved).",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["*://*.youtube.com/*"],
  "icons": { "16": "assets/icon16.png", "48": "assets/icon48.png", "128": "assets/icon128.png" },
  "action": { "default_title": "Deepfake Watch" },
  "background": { "service_worker": "src/background/background.js", "type": "module" },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["src/content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [{
    "resources": ["src/content/panel.css"],
    "matches": ["*://*/*"]
  }]
}
