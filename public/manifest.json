{
  "manifest_version": 3,
  "name": "DeepShield",
  "version": "0.1.0",
  "description": "Local, real-time deepfake detection via WebGPU/WASM.",
  "action": { "default_popup": "popup.html" },
  "background": { "service_worker": "service_worker.js", "type": "module" },
  "permissions": ["tabCapture", "offscreen", "scripting", "activeTab", "storage", "tabs"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "css": ["ui/overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "models/deepshield.onnx",
        "vendor/mediapipe/wasm/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "128": "icons/128.png"
  }
}
